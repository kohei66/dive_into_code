
<p><%= notice %></p>
<table>
  <h1>ブログ一覧</h1>
    <tr class="row">
        <th class="col-xs-6">タイトル</th>
        <th class="col-xs-6">内容</th>
    </tr>
<% @blogs.each do |blog| %>
  <tr class="row">
      <td class="btn btn-default col-xs-12"><%= blog.title%></td>
      <td class="btn btn-default col-xs-12"><%= blog.content%></td>
      <td><%= link_to '詳細を確認する', blog_path(blog.id) ,class: "btn btn-default col-xs-12" %></td>
      <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id), data:{ confirm: '本当に編集していいですか？'}, class: "btn btn-info col-xs-12" %></td>
      <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: {confirm:'本当に削除していいですか？'} , class: "btn btn-warning col-xs-12"%></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to '新しくブログを投稿する', new_blog_path %>
