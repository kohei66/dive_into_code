
<p><%= notice %></p>
<h1>ブログ一覧</h1>
<table class="row">
    <tr class="col-md-6">
      <div class="row">
        <th class="col-md-12 col-xs-6">タイトル</th>
        <th class="col-md-12 col-xs-6">内容</th>
      </div>
    </tr>
  </table>
<% @blogs.each do |blog| %>
  <div class="row">
      <div class="btn btn-default col-md-3 col-xs-6"><%= blog.title%></div>
      <div class="btn btn-default col-md-3 col-xs-6"><%= blog.content%></div>
      <div class="col-md-2 col-xs-4"><%= link_to '詳細を確認する', blog_path(blog.id) ,class: "btn btn-default " %></div>
      <div class="col-md-2 col-xs-4"><%= link_to 'ブログを編集する', edit_blog_path(blog.id), data:{ confirm: '本当に編集していいですか？'}, class: "btn btn-info " %></div>
      <div class="col-md-2 col-xs-4"><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: {confirm:'本当に削除していいですか？'} , class: "btn btn-warning"%></div>
  </div>
<% end %>

<br>

<%= link_to '新しくブログを投稿する', new_blog_path %>
